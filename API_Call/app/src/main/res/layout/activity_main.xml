<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@color/colorBackground">


    <ListView
            android:id="@+id/lvMovies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true" android:padding="20dp" android:weightSum="2"
                  android:layout_marginBottom="10dp">

        <Button android:id="@+id/btnPrev" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Geri"
                android:layout_weight="1"/>

        <Button android:id="@+id/btnNext" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Ä°leri"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>